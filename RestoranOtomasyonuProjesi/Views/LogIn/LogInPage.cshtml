@using EntityLayer.Concrete;
@{
    Layout = null;
    List<User> users = ViewBag.users;
}

<!DOCTYPE html>
<link href="~/css/bootstrap.css" rel="stylesheet" />
<script src="~/js/bootstrap.js"></script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giriş Yap</title>

    <style>
        .absolute-center {
            width: 100%;
            height: 300px;
            margin: auto;
            position: absolute;
            top: 0;
            bottom: 0;
            text-align: center !important;
        }
    </style>

</head>

<body class="absolute-center">
    <div class="row justify-content-center">

        <div class="col-lg-4 col-md-5 col-sm-6 col-6">
            <h3 class="mb-3">Giriş Yap</h3>

            <div class="input-group">
                <select class="form-select" id="NameSelection" name="Name">
                    <option>İsminizi seçiniz.</option>
                    @foreach (var user in users)
                    {
                        <option>@user.Name</option>
                    }
                </select>
            </div>

            <div class="clearfix"></div>

            <div class="mt-2">
                <input type="password" class="form-control" id="password" name="Password" placeholder="Şifrenizi giriniz.">
            </div>
            <form action="@Url.Action("LogInPage", "LogIn")" method="post" role="button">

                    <button class="w-50 btn btn-lg btn-primary mt-3" type="submit">Giriş Yap</button>

            </form>
            <div class="mt-3">
                <a href="@Url.Action("MainPage", "LogIn")">Geri Dön</a>
            </div>

            <p class="mt-5 mb-3 text-muted">&copy; 2021–2022</p>
        </div>
    </div>
</body>
</html>
